# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true

[*.js]
quote_type = single
semi = true
trailing_comma = all

[*.json]
indent_style = space
indent_size = 2

[*.{css,scss,less,html}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false